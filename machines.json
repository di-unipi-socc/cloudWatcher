    "machines": {
        "cw-probe-small-20": {
            "image": "Ubuntu 20.04 - GARR",
            "specs": {
                "vcpus": 1,
                "ram": 6000,
                "disk": 20 
            },
            "key_name": "socc",
            "network": "default",
            "security_groups": [
                "default",
                "CloudWatcher-sec-group"
            ],
            "scripts": {
                "setup": [
                    "sudo apt update",
                    "sudo apt -f install -y",
                    "sudo apt update -y && sudo apt dist-upgrade -y"
                ],
                "probe": ["hostname"],
                "fio": ["sudo fio --randrepeat=1 --direct=1 --gtod_reduce=1 --name=test --filename=random_read_write.fio --bs=4k --iodepth=64 --size=<SIZE> --readwrite=randrw --rwmixread=75 --output-format=json"]
            },
            "tasks": [
                [
                    {
                        "name": "fio",
                        "function": {
                            "name": "fio"
                        },
                        "aggregate": {
                            "name": "aggregate_fio"
                        },
                        "args": "10MB",
                        "setup": [
                            "sudo apt install fio -y"
                        ]
                    }
                ],
                [
                    {
                        "name": "network",
                        "function": {
                            "name": "probe_network",
                            "slo":{
                                "latency":{
                                    "max": [[0.3, "WARNING"], [0.6, "ATTENTION"], [1, "CRITICAL"]]
                                },
                                "bandwidth":{
                                    "upload":{
                                        "min": [[500000000, "CRITICAL"], [800000000, "WARNING"]]
                                    },
                                    "download":{
                                        "min": [[500000000, "CRITICAL"], [800000000, "WARNING"]]
                                    }
                                }
                            }
                        },
                        "aggregate": {
                            "name": "aggregate_network",
                            "slo":{
                                "latency":{
                                    "failed": {
                                        "max": 0
                                    }
                                },
                                "bandwidth":{
                                    "upload":{
                                        "failed": {
                                            "max": 0
                                        }
                                    },
                                    "download":{
                                        "failed": {
                                            "max": 0
                                        }
                                    }
                                }
                            }
                        },
                        "setup": [
                            "sudo apt install -y iperf3",
                            "sudo iperf3 -s -D"
                        ]
                    }
                ],
                [
                    {
                        "name": "probe",
                        "function": {
                            "name": "exec_script",
                            "slo":{
                                "success": {
                                    "min": 100
                                },
                                "time": {
                                    "max": [[61, "WARNING"], [70, "CRITICAL"]]
                                },
                                "iterations": {
                                    "max":1
                                },
                                "#errors": {
                                    "total": {
                                        "max": 0
                                    }
                                }
                            }
                        },
                        "aggregate": {
                            "name": "aggregate_script",
                            "slo":{
                                "success": {
                                    "min": 100
                                },
                                "time": {
                                    "max": 61
                                },
                                "iterations": {
                                    "max":1
                                },
                                "#errors": {
                                    "total": {
                                        "max": 0
                                    }
                                }
                            }
                        },
                        "args": "probe"
                    }
                ],
                [
                    {
                        "name": "remake",
                        "function": {
                            "name": "remake",
                            "slo":{
                                "success": {
                                    "min": 100
                                },
                                "time": {
                                    "max": 61
                                },
                                "iterations": {
                                    "max":1
                                },
                                "#errors": {
                                    "total": {
                                        "max": 0
                                    }
                                }
                            }
